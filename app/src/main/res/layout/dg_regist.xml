<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/ll_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="软件注册"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View style="@style/tab_w_view"/>
    <LinearLayout style="@style/edit_ll"
        android:visibility="gone"
        >

        <TextView
            style="@style/edit_title"
            android:text="验证码" />

        <EditText
            android:id="@+id/tv_code"
            style="@style/edit_view_edit" />
    </LinearLayout>
    <LinearLayout style="@style/edit_ll">

        <TextView
            style="@style/edit_title"
            android:text="单位名称" />

        <EditText
            android:id="@+id/tv_coltd"
            style="@style/edit_view_edit" />
    </LinearLayout>
    <LinearLayout style="@style/edit_ll">

        <TextView
            style="@style/edit_title"
            android:text="联系人姓名" />

        <EditText
            android:id="@+id/tv_linkman"
            style="@style/edit_view_edit" />
    </LinearLayout>    <LinearLayout style="@style/edit_ll">

        <TextView
            style="@style/edit_title"
            android:text="联系人电话" />

        <EditText
            android:id="@+id/tv_tel"
            style="@style/edit_view_edit" />
    </LinearLayout>    <LinearLayout style="@style/edit_ll">

        <TextView
            style="@style/edit_title"
            android:text="联系人邮箱" />

        <EditText
            android:id="@+id/tv_email"
            style="@style/edit_view_edit" />
    </LinearLayout>

    <LinearLayout style="@style/edit_ll">

        <TextView
            style="@style/edit_title"
            android:text="备注" />

        <EditText
            android:id="@+id/tv_remarks"
            style="@style/edit_view_edit" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_clean"
            android:text="验证码注册"
            style="@style/bt" />
        <TextView
            android:id="@+id/tv_nice"
            android:text="注册"
            style="@style/bt"  />
        </LinearLayout>
</LinearLayout>