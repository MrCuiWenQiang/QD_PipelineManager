<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            style="@style/ll_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout style="@style/edit_ll"
                android:visibility="gone">

                <TextView
                    style="@style/edit_title"
                    android:text="管线类型" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/tv_gxlx"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_style"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_load_gxlx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/load" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/edit_ll">

                <TextView
                    style="@style/edit_title"
                    android:text="管点编号" />

                <EditText
                    android:id="@+id/tv_wtdh"
                    style="@style/edit_view_edit" />
            </LinearLayout>

            <LinearLayout style="@style/edit_ll">

                <TextView
                    style="@style/edit_title"
                    android:text="特征" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/tv_tz"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_style"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_load_tzd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/load" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/edit_ll">

                <TextView
                    style="@style/edit_title"
                    android:text="附属物" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/tv_fsw"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_style"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_load_fsw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/load" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout style="@style/edit_ll">

                <TextView
                    style="@style/edit_title"
                    android:text="测绘横坐标" />

                <EditText
                    android:id="@+id/tv_ch_x"
                    android:inputType="numberDecimal"
                    style="@style/edit_view_edit" />
            </LinearLayout>

            <LinearLayout style="@style/edit_ll">

                <TextView
                    style="@style/edit_title"
                    android:text="测绘纵坐标" />

                <EditText
                    android:id="@+id/tv_ch_y"
                    android:inputType="numberDecimal"
                    style="@style/edit_view_edit" />
            </LinearLayout>
            <LinearLayout style="@style/edit_ll"
                android:visibility="gone">

                <TextView
                    style="@style/edit_title"
                    android:text="横坐标" />

                <EditText
                    android:id="@+id/tv_x"
                    style="@style/edit_view_edit" />
            </LinearLayout>

            <LinearLayout style="@style/edit_ll"
                android:visibility="gone">

                <TextView
                    style="@style/edit_title"
                    android:text="纵坐标" />

                <EditText
                    android:id="@+id/tv_y"
                    style="@style/edit_view_edit" />
            </LinearLayout>

            <LinearLayout style="@style/edit_ll">

                <TextView
                    style="@style/edit_title"
                    android:text="地面高程" />

                <EditText
                    android:id="@+id/tv_dmgc"
                    style="@style/edit_view_edit" />
            </LinearLayout>

            <LinearLayout style="@style/edit_ll"
                android:visibility="gone">

                <TextView
                    style="@style/edit_title"
                    android:text="偏心井点号" />

                <EditText
                    android:id="@+id/tv_pxjw"
                    style="@style/edit_view_edit" />
            </LinearLayout>

            <LinearLayout style="@style/edit_ll" android:visibility="gone">

                <TextView
                    style="@style/edit_title"
                    android:text="井类型" />

                <EditText
                    android:id="@+id/tv_jlx"
                    style="@style/edit_view_edit" />
            </LinearLayout>

            <LinearLayout style="@style/edit_ll"
                android:visibility="gone">

                <TextView
                    style="@style/edit_title"
                    android:text="井直径" />

                <EditText
                    android:id="@+id/tv_jzj"
                    style="@style/edit_view_edit" />
            </LinearLayout>

            <LinearLayout style="@style/edit_ll"
                android:visibility="gone">

                <TextView
                    style="@style/edit_title"
                    android:text="井脖深" />

                <EditText
                    android:id="@+id/tv_jbs"
                    style="@style/edit_view_edit" />
            </LinearLayout>

            <LinearLayout style="@style/edit_ll">

                <TextView
                    style="@style/edit_title"
                    android:text="井底埋深" />

                <EditText
                    android:id="@+id/tv_jds"
                    style="@style/edit_view_edit" />
            </LinearLayout>

            <LinearLayout style="@style/edit_ll">

                <TextView
                    style="@style/edit_title"
                    android:text="井盖类型" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/tv_jglx"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_style"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_load_jglx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/load" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/edit_ll">

                <TextView
                    style="@style/edit_title"
                    android:text="井盖规格" />

                <EditText
                    android:id="@+id/tv_jggg"
                    style="@style/edit_view_edit" />
            </LinearLayout>

            <LinearLayout style="@style/edit_ll">

                <TextView
                    style="@style/edit_title"
                    android:text="井盖材质" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/tv_jgcz"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_style"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_load_jgcz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/load" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout style="@style/edit_ll"  android:visibility="gone">

                <TextView
                    style="@style/edit_title"
                    android:text="井盖状态" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/tv_jgzt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_style"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_load_jgzt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/load" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout style="@style/edit_ll"  android:visibility="gone">

                <TextView
                    style="@style/edit_title"
                    android:text="使用状态" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/tv_syzt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_style"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_load_syzt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/load" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/edit_ll"  android:visibility="gone">

                <TextView
                    style="@style/edit_title"
                    android:text="探测方式" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/tv_tcfs"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_style"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_load_tcfs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/load" />
                </LinearLayout>
            </LinearLayout>

            <ViewStub
                android:id="@+id/vs_ps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/vs_marker_ps" />
            <LinearLayout style="@style/edit_ll">

                <TextView
                    style="@style/edit_title"
                    android:text="权属单位" />

                <EditText
                    android:id="@+id/tv_qsdw"
                    style="@style/edit_view_edit" />
            </LinearLayout>
            <LinearLayout style="@style/edit_ll">

                <TextView
                    style="@style/edit_title"
                    android:text="建设日期" />

                <EditText
                    android:id="@+id/tv_jsrq"
                    style="@style/edit_view_edit" />
            </LinearLayout>
            <LinearLayout style="@style/edit_ll">

                <TextView
                    style="@style/edit_title"
                    android:text="数据来源" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/tv_sjly"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_style"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_load_sjly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/load" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout style="@style/edit_ll"  >

                <TextView
                    style="@style/edit_title"
                    android:text="所在位置" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/tv_szwz"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_style"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_load_szwz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/load" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout style="@style/edit_ll"  >

                <TextView
                    style="@style/edit_title"
                    android:text="是否利用" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/tv_sfly"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_style"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_load_sfly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/load" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/edit_ll">

                <TextView
                    style="@style/edit_title"
                    android:text="备注" />

                <EditText
                    android:id="@+id/tv_remarks"
                    style="@style/edit_view_edit" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <View style="@style/tab_w_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_save"
            style="@style/bottom_open"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="保存" />

        <View style="@style/tab_h_view" />

        <TextView
            android:id="@+id/tv_exit"
            style="@style/bottom_open"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="退出" />
    </LinearLayout>
</LinearLayout>