            <corners android:bottomLeftRadius="@dimen/bt_radius_value" android:bottomRightRadius="@dimen/bt_radius_value" android:topLeftRadius="@dimen/bt_radius_value" android:topRightRadius="@dimen/bt_radius_value" />
